<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- linearlayout for vertical placement of icon and all text objects -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ImageView>

        <!-- linearlayout for vertical placement of all text objects -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:text="No game loaded " >
            </TextView>
            
            <TextView
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                
                android:text="Year: " >
            </TextView>

            <TextView
                android:id="@+id/mfg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maker: " >
            </TextView>

            <TextView
                android:id="@+id/board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Board: " >
            </TextView>

            <TextView
                android:id="@+id/hardware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:text="Hardware: " >
            </TextView>

            <!-- linearlayout for horizontal command and time text -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/trackNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.025"
                    android:text="Command: " >
                </TextView>

                <TextView
                    android:id="@+id/playTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.025"
                    android:text="Time: " >
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:text="Song: " >
            </TextView>
            
            
        </LinearLayout>
        
    </LinearLayout>

    

    <!-- linearlayout for horizontal placement of player buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/prev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.025"
            android:src="@drawable/ic_action_previous"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.025"
            android:src="@drawable/ic_action_play"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.025"
            android:src="@drawable/ic_action_replay"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.025"
            android:src="@drawable/ic_action_next"
            android:textSize="18sp" />
    </LinearLayout>
<ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>





























